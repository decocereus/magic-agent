{
  "version": "1.0",
  "notes": [
    "All commands execute against the currently open Resolve project/timeline.",
    "Clip indices are 0-based; track indices are 1-based.",
    "For selectors, use exactly one of index, name, or all.",
    "Batch execution continues on errors and reports per-op status."
  ],
  "definitions": {
    "ClipSelector": {
      "description": "Selects clip(s) on a track. Exactly one of index, name, or all must be set.",
      "type": "object",
      "properties": {
        "track": {
          "type": "integer"
        },
        "index": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "all": {
          "type": "boolean"
        },
        "track_type": {
          "type": "string",
          "enum": [
            "video",
            "audio"
          ]
        }
      }
    },
    "ClipSelectorMulti": {
      "description": "Select multiple clips by indices.",
      "type": "object",
      "properties": {
        "track": {
          "type": "integer"
        },
        "indices": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "track_type": {
          "type": "string",
          "enum": [
            "video",
            "audio"
          ]
        }
      }
    },
    "ClipInfo": {
      "description": "Clip with optional in/out points for append_to_timeline.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "in_point": {
          "type": "integer"
        },
        "out_point": {
          "type": "integer"
        }
      }
    },
    "Color": {
      "type": "object",
      "properties": {
        "r": {
          "type": "number"
        },
        "g": {
          "type": "number"
        },
        "b": {
          "type": "number"
        },
        "a": {
          "type": "number"
        }
      }
    },
    "TextStyle": {
      "type": "object",
      "properties": {
        "font": {
          "type": "string"
        },
        "size": {
          "type": "number"
        },
        "color": {
          "$ref": "#/definitions/Color"
        },
        "bold": {
          "type": "boolean"
        },
        "italic": {
          "type": "boolean"
        },
        "tracking": {
          "type": "number"
        },
        "line_spacing": {
          "type": "number"
        },
        "h_anchor": {
          "type": "string",
          "enum": [
            "left",
            "center",
            "right"
